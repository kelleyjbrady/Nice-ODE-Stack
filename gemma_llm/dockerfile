# Use an official NVIDIA CUDA runtime image
FROM nvidia/cuda:12.1.1-runtime-ubuntu22.04

# Set up a non-root user
ENV APP_USER=gemma
ENV APP_UID=1001
RUN groupadd --gid $APP_UID $APP_USER && \
    useradd --uid $APP_UID --gid $APP_UID -m $APP_USER

# Install Python and pip
RUN apt-get update && \
    apt-get install -y python3 python3-pip iputils-ping curl dnsutils && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy and install dependencies
COPY app/requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt
RUN pip3 install --no-cache-dir --upgrade requests urllib3 certifi

# Copy app code and change ownership
COPY app/ .
RUN chown -R $APP_USER:$APP_USER /app

USER $APP_USER

# Expose port and run application
EXPOSE 8000
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]