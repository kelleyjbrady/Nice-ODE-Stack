# Use an official NVIDIA CUDA runtime image
FROM nvidia/cuda:12.1.1-devel-ubuntu22.04

# Set up a non-root user
ENV APP_USER=gemma
ENV APP_UID=1001
RUN groupadd --gid $APP_UID $APP_USER && \
    useradd --uid $APP_UID --gid $APP_UID -m $APP_USER

# Install Python, pip, AND NETWORKING TOOLS for debugging
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    python3-pip \
    python3-dev \
    gosu \
    build-essential \
    iputils-ping \
    curl \
    dnsutils \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy and install dependencies
COPY app/requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt

# Force an upgrade of core networking libraries
RUN pip3 install --no-cache-dir --upgrade requests urllib3 certifi

# Copy app code
COPY app/ .

# Copy the entrypoint script
COPY entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/entrypoint.sh

# The CMD to run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]

# We will run the entrypoint as root to fix permissions,
# then the entrypoint will switch to the 'gemma' user for the CMD.
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]